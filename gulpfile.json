{
  "debug": {
    "js": {
      "title": "js"
    },
    "json": {
      "title": "json"
    },
    "sh": {
      "title": "sh"
    }
  },
  "destination": {
    "lib": "lib"
  },
  "env": {
    "common": {},
    "debug": {
      "DEBUG": "common-userinfo",
      "NODE_ENV": "debug"
    },
    "production": {
      "NODE_ENV": "production"
    }
  },
  "plugins": {
    "babel": {
      "presets": "es2015"
    },
    "mocha": {
      "reporter": "spec"
    }
  },
  "sources": {
    "clean": ["lib/", "*.tgz"],
    "js": ["src/**/*.js"],
    "json": ["src/**/*.json"],
    "sh": ["src/**/*.sh"],
    "tests": ["tests/**/when_*.js"]
  }
}
